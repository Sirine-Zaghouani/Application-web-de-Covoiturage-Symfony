<body class="sub_page">
<div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container">

                <a class="navbar-brand" href="{{ path('home') }}">
                    <img src="assets/images/logo.png" alt="" style="width:150px;height:50px;"/>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {% if app.user %}
                <div class="collapse navbar-collapse" style="margin-left:-50px" >
                    <ul class="navbar-nav ">
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('home') }}">Acceuil<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('mon_profil') }}">Mon profil<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('MyPost') }}">Mes publications </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('AllPosts') }}">Publications disponibles </a>
                        </li>
                    </ul>
                </div>
                <!-- <a href="{{ path('account') }}">Mon compte</a>|<a href="{{ path('app_login') }}">Déconnexion</a> -->
                <button type="button" class="btn btn-outline-light"  style="margin-left: 250px" onclick=window.location.href="{{ path('add_annonce') }}" ><i class="fa fa-plus"> Ajouter une publication</i></button>
                <button type="button" class="btn btn-outline-light"  style="margin-left: 20px" onclick=window.location.href="{{ path('app_logout') }}" > Déconnexion</button>

                {% else %}
                <div class="collapse navbar-collapse" >
                    <ul class="navbar-nav ">
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('home') }}">Accueil <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('infos') }}">Infos utiles </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Créer un compte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                        </li>

                        <button type="button" class="btn btn-outline-light"  style="margin-left: 400px" onclick=window.location.href="{{ path('app_login') }}" > Publier une annonce</button>

                    </ul>
                </div>
                {% endif %}
            </nav>
        </div>

    </header>
    <!-- end header section -->
</div>


